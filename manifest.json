{
  "name": "Jurojin",
  "version": "1.0",
  "description": "Clipboard manager",
  "permissions": ["storage", "clipboardRead"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon-32.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "persistent": false,
    "page": "background/background.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "manifest_version": 2
}
